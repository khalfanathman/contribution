extends base

block content
 .content-wrapper
    .container-fluid
      .row.mb-2
        .col-sm-6
         h1 Welfare Contributions
        .col-sm-6
          ol.breadcrumb.float-sm-right
            li.breadcrumb-item
             a(href="#") Home
            li.breadcrumb-item.active Contributions
        section.content
            .card.shadow.mb-4
                .card-header.py-3
                  h3.card-title Contributions
                  .card-tools
                    button.btn.btn-tool(type="button", data-card-widget="collapse", title="Collapse")
                      i.fas.fa-minus
                    button.btn.btn-tool(type="button", data-card-widget="remove", title="Remove")
                      i.fas.fa-times
                .card-body.p-0
                    table.table.table-striped.projects
                        thead
                          tr
                            th(style="width: 1%") No.
                            th(style="width: 20%") Contribution Event
                            th(style="width: 30%") Team Members
                            th Contribution Progress
                            th.text-center(style="width: 4%")  Status 
                            th.text-center(style="width: 4%")  Amount Contributed
                            th(style="width: 20%")
                        tbody
                         each cont , i in contributions
                          tr
                            td #{i+1}
                            td
                                a #{cont.tittle}
                                br
                                small #{cont.start_date.toLocaleString('en-us', {month: 'long', year: 'numeric'})}          
                            td
                                ul.list-inline
                                    li.list-inline-item
                                        img.table-avatar(alt="Avatar", src="../../dist/img/avatar.png")
                                    li.list-inline-item
                                        img.table-avatar(alt="Avatar", src="../../dist/img/avatar2.png")
                                    li.list-inline-item
                                        img.table-avatar(alt="Avatar", src="../../dist/img/avatar3.png")
                                    li.list-inline-item
                                        img.table-avatar(alt="Avatar", src="../../dist/img/avatar4.png")
                            td.project_progress
                                .progress.progress-sm
                                    .progress-bar-striped.bg-green(role="progressbar", aria-valuenow="17", aria-valuemin="0", aria-valuemax="100", style="width: 9%").
                                small.
                                    57% Complete
                            td.project-state
                                span.badge.badge-success Success
                            td.text-center #{cont.amount_contributed}
                            td.project-actions.text-right
                             if member 
                              if member.role === 'admin' || 'super-user' 
                                a.btn.btn-primary.btn-sm(href=`/contributions/${cont.id}`)
                                    i.fas.fa-folder.
                                    |
                                    | View 
                                    | 
                                a.btn.btn-info.btn-sm(href="#")
                                    i.fas.fa-pencil-alt.
                                    | 
                                    | Edit
                                    | 
                                a.btn.btn-danger.btn-sm(href="#")
                                    i.fas.fa-trash.
                                    |
                                    | Delete
                                    |
                              else 
                                a.btn.btn-primary.btn-sm(href=`/contribution/${cont.title}`)
                                    i.fas.fa-folder.
                                    |
                                    | View 
                                    | 
                             else 
                                a.btn.btn-primary.btn-sm(href=`/contribution/${cont.title}`)
                                    i.fas.fa-folder.
                                    |
                                    | View 
                                    |  
                    .row
                     .col-sm-12.col-md-5
                        .dataTables_info#dataTable_info(role="status", aria-live="polite") Showing 1 to 10 of 57 entries
                     .col-sm-12.col-md-7
                        .dataTables_paginate.paging_simple_numbers#dataTable_paginate
                            ul.pagination
                                li.paginate_button.page-item.previous.disabled#dataTable_previous
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="0", tabindex="0") Previous
                                li.paginate_button.page-item.active
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="1", tabindex="0") 1
                                li.paginate_button.page-item
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="2", tabindex="0") 2
                                li.paginate_button.page-item
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="3", tabindex="0") 3
                                li.paginate_button.page-item
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="4", tabindex="0") 4
                                li.paginate_button.page-item
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="5", tabindex="0") 5
                                li.paginate_button.page-item
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="6", tabindex="0") 6
                                li.paginate_button.page-item.next#dataTable_next
                                    a.page-link(href="#", aria-controls="dataTable", data-dt-idx="7", tabindex="0") Next

    